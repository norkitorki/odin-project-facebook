<div class="columns is-centered">
  <div class="column is-one-third">
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <%= form_with(model: comment, url: comments_path(commentable: { commentable_type: commentable.class, commentable_id: commentable.id })) do |f| %>
            <div class="field">
              <%= f.text_area :body, placeholder: 'Add a comment', rows: 2, class: 'textarea is-info' %>
            </div>
            <div class="action">
              <%= f.submit 'Add Comment', class: 'button is-info' %>
            </div>
          <% end %>
        </div>
      </div>
    </article>
  </div>
</div>
