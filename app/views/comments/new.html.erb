<% if @comment.parent_id %>
  <h2 class="title is-size-2">New Reply</h2>
  <div class="columns">
    <div class="column is-one-third-desktop">
      <%= render 'comments/comment', comment: @comment.parent %>
    </div>
  </div>
<% else %>
  <h2 class="title is-size-2">New Comment for:</h2>
  <div class="columns">
    <div class="column is-one-third-desktop">
      <%= render 'posts/post', post: @comment.commentable %>
    </div>
  </div>
<% end %>
<%= turbo_frame_tag :comment_reply do %>
  <div data-turbo="false">
    <%= render 'form', comment: @comment %>
    <%= link_to 'Back', @comment.commentable || root_path, class: 'button is-danger mt-1' %>
  </div>
<% end %>
