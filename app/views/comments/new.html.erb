<% if @comment.parent_id %>
  <h2 class="title is-size-2">New Reply</h2>
  <div class="columns">
    <div class="column is-one-third-desktop">
      <%= render 'comments/comment', comment: @comment.parent %>
    </div>
  </div>
<% else %>
  <h2 class="title is-size-2">New Comment</h2>
  <div >
<% end %>
<%= turbo_frame_tag :comment_reply do %>
  <%= form_with(model: @comment, url: comments_path(parent: @comment.parent_id), data: { turbo: false }) do |f| %>
    <%= f.hidden_field :parent_id, value: @comment.parent_id %>
    <%= f.hidden_field :commentable_type, value: @comment.commentable_type %>
    <%= f.hidden_field :commentable_id, value: @comment.commentable_id  %>
    <div class="field">
      <%= f.text_area :body, class: 'textarea is-info' %>
    </div>
    <div class="action">
      <%= f.submit class: 'button is-primary mb-2' %>
    </div>
  <% end %>
  <%= link_to 'Back', @comment.commentable || root_path, class: 'button is-danger ml-2' %>
<% end %>
