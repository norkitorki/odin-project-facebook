<div class="ml-5">
<h1 class="title is-size-2">Feed</h1>

<div class="columns is-multiline is-2 is-variable">
  <% @posts.each do |post| %>
    <div class="column is-one-third-tablet is-one-quarter-desktop">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= post.user.first_name %> <%= post.user.last_name %></p>
            </div>
          </div>

          <div class="content">
            <p><%= post.content %></p>
            <time class="is-size-7"><%= post.updated_at %></time>
              <%= link_to '/' do %>
                <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                  <path fill="currentColor" d="M23,10C23,8.89 22.1,8 21,8H14.68L15.64,3.43C15.66,3.33 15.67,3.22 15.67,3.11C15.67,2.7 15.5,2.32 15.23,2.05L14.17,1L7.59,7.58C7.22,7.95 7,8.45 7,9V19A2,2 0 0,0 9,21H18C18.83,21 19.54,20.5 19.84,19.78L22.86,12.73C22.95,12.5 23,12.26 23,12V10M1,21H5V9H1V21Z" />
                </svg>
              <% end %>
          </div>

          <% if current_user == post.user %>
            <footer class="card-footer">
              <%= link_to 'Edit', '/', class: 'card-footer-item' %>
              <%= link_to 'Delete', '/', class: 'card-footer-item' %>
            </footer>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>