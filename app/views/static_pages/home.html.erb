<h1 class="title is-size-2 my-4">Timeline</h1>

<% if user_signed_in? %>
  <%= turbo_frame_tag Post.new do %>
    <%= link_to 'Create New Post', new_post_path, class: 'button is-info' %>
  <% end %>
<% end %>

<article class="columns is-multiline is-1 is-variable">
  <% @posts.each do |post| %>
    <div class="column is-one-third-tablet is-one-quarter-desktop">
      <%= render post, like: post.find_or_initialize_like(current_user) %>
    </div>
  <% end %>
</article>
