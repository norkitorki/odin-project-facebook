<div class="box">
  <h2 class="title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label is-size-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :email %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "button is-info mb-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
