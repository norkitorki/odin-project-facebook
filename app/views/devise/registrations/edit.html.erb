<div class="box">
  <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label is-size-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :email %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field box">
      <%= f.label :photo, class: 'label is-size-5' %>
      <% if resource.photo.attached? %>
        <figure class="image is-128x128">
          <%= image_tag resource.user_photo %>
        </figure>
      <% end %>
      <i>(leave blank if you don't want to upload/update a photo)</i><br>
      <%= f.file_field :photo, class: 'mt-4' %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label is-size-5" %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :password %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label is-size-5" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "label is-size-5" %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :current_password %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "button is-primary" %>
    </div>
  <% end %>

  <p class="is-size-5 py-2">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %></p>

  <%= link_to "Back", :back, class: "button is-info mt-2" %>
</div>
