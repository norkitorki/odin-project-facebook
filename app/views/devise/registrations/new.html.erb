<div class="box" data-turbo="false">
  <h2 class="title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'ml-4') do |f| %>
    <div class="field">
      <%= f.label :email, class: "label is-size-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :email %>
    </div>

    <div class="field columns">
      <div class="column">
        <%= f.label :first_name, class: "label is-size-5" %>
        <%= f.text_field :first_name, autocomplete: "first_name", class: "input" %>
        <%= render 'public/input_errors', resource: resource, attribute: :first_name %>
      </div>
      <div class="column">
        <%= f.label :last_name, class: "label is-size-5" %>
        <%= f.text_field :last_name, autocomplete: "last_name", class: "input" %>
        <%= render 'public/input_errors', resource: resource, attribute: :last_name %>
      </div>
    </div>

    <div class="field">
      <%= f.label :birthday, class: "label is-size-5" %><br />
      <%= f.date_field :birthday, class: 'input' %>
      <%= render 'public/input_errors', resource: resource, attribute: :birthday %>
    </div>

    <div class="field">
      <%= f.label :gender, "Gender (optional)", class: "gender-label label is-size-5" %>
      <div class="select">
        <%= f.select :gender, ["Male", "Female", "Custom", ""] %>
      </div>
      <%= render 'public/input_errors', resource: resource, attribute: :gender %>
    </div>

    <%= render 'photo_field', form: f %>

    <div class="field">
      <%= f.label :password, class: "label is-size-5" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label is-size-5" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      <%= render 'public/input_errors', resource: resource, attribute: :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button is-primary" %>
    </div>
  <% end %>
</div>
