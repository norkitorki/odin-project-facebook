<div class="field">
  <%= form.label :photo, class: "label is-size-5" %>
  <p class="mb-4">
    <i>
      By default, this site uses <%= link_to "Gravatar", "https://gravatar.com", target: "_blank" %> to automatically link a photo to your account based on your email.
      If you would like to use a custom photo, please use the form below.
    </i>
  </p>
  <% if action_name == 'edit' %>
    <figure class="image is-128x128 mb-3">
      <%= image_tag user.photo.url, alt: "user photo preview" %>
    </figure>
    <% if user.photo.file %>
      <%= form.label :remove_photo, class: "checkbox" do %>
        <%= form.check_box :remove_photo %>
        Remove photo
      <% end %>
    <% end %>
    <p>
      <i>(leave blank if you don't want to upload/update a photo)</i>
    </p>
  <% end %>
  <%= form.file_field :photo, class: "mt-2" %>
  <%= render 'public/input_errors', resource: user, attribute: :photo %>
</div>
